<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zillion.crypto_price_details.design_preview"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/darker_gray">

        <ImageView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more"
            android:id="@+id/vertMenu"
            android:layout_weight="0.1"/>

        <ImageView
            android:id="@+id/calc"
            android:src="@drawable/ic_calculate"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"/>

        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_refresh_icon"
            android:id="@+id/refresh" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cryptoIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="top|center"
            android:layout_margin="40dp"
            />

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:textColor="@android:color/white"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginStart="60dp"
                android:layout_height="wrap_content"
                android:text="HOUR:"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@android:color/white"
                android:id="@+id/hour_tv"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textSize="14sp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:textColor="@android:color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="DAY:"
                android:layout_marginStart="60dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:id="@+id/day_tv"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:textColor="@android:color/white"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="PRICE:"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:id="@+id/price_tv"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:textColor="@android:color/white"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginStart="60dp"
                android:layout_height="wrap_content"
                android:text="CAP:"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:id="@+id/cap_tv"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:textColor="@android:color/white"
                android:layout_width="0dp"
                android:layout_marginStart="60dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="COIN HEAT:"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:id="@+id/heat_tv"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#000000" />

    <LinearLayout
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:fadingEdge="horizontal"
            android:requiresFadingEdge="horizontal"
            android:cacheColorHint="#00ffffff"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/allCryptoCurrencies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

    </LinearLayout>

</LinearLayout>
